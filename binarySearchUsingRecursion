#include<iostream>
using namespace std;
bool binaryRecursion(int arr[],int start,int end,int key)
{
    if(start>end)
    {
        return false;
    }
    int mid=start+(end-start)/2;
    if(arr[mid]==key)
    {
        return true;
    }
    
    if(arr[mid]<key)
    {
        return binaryRecursion(arr,mid+1,end,key);
    }
    else{
        return binaryRecursion(arr,start,mid-1,key);
    }
}
int main(){
    int arr[6]={2,4,6,10,14,16};
    int size=6;
    int key=1;
    cout<<"present or not"<<binaryRecursion(arr,0,5,key)<<endl;
    return 0;

}
