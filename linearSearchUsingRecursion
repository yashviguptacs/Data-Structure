#include<iostream>
using namespace std;
bool linearRecursion(int arr[],int size,int key)
{
    if(size==0)
    {
        return false;
    }
    if(arr[0]==key)
    {
        return true;
    }
    else{
        bool rem=linearRecursion(arr+1,size-1,key);
        return rem;
    }
}
int main()
{
    int arr[5] = {2,7,8,4,10};
    int size=5;
    int key=6;
    bool ans=linearRecursion(arr,size,key);
    if(ans){
        cout<<"present";
    }
    else{
        cout<<"Not Present";
    }
    }
